.row
  .span12
    = form_tag tasks_path, :method => :post, :class => 'form-inline', :id => 'start_harvest_form' do
      %span#description-control-group.control-group
        .input-prepend
          %span.add-on
            %i.icon-wrench
          %input{ :type => 'text', :name => 'description', :placeholder => 'Description' }
      %span#time-control-group.control-group
        .input-prepend
          %span.add-on
            %i.icon-time
          %input.inputmask{ :type => 'text', :name => 'time', :placeholder => 'Time', 'data-mask' => '99:99:99', :value => '00:00:00' }
      %button.btn.btn-primary{ :type => 'submit' }
        %i.icon-play-circle.icon-white
        Start harversting

- if @tasks.present?
  - @tasks.each_slice(3) do |task_row|
    .row
      %ul.thumbnails
        - task_row.each do |task|
          = render :partial => 'tasks/task', :locals => {:task => task}
- else
  .well Your life is spared, use it well!

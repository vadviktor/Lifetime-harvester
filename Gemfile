source 'https://rubygems.org'

gem 'rails', '3.2.11'
gem 'passenger'
gem 'pg'
gem 'haml'
gem 'gon'
gem 'omniauth-twitter'
gem 'omniauth-github'
gem 'omniauth-facebook'
gem 'omniauth-google-oauth2'
